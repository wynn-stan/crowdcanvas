// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model user {
  id String @id @default(uuid())

  first_name        String
  last_name         String
  email             String @unique
  password          String
  profile_image_url String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts    post[]
  comments comment[]
}

model post {
  id      String @id @default(uuid())
  author  user   @relation(fields: [post_by], references: [id])
  post_by String

  title       String
  description String @db.LongText

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments comment[]

  @@index([post_by])
}

model comment {
  id          String @id @default(uuid())
  author      user   @relation(fields: [created_by], references: [id])
  reference   post   @relation(fields: [created_for], references: [id])
  created_by  String
  created_for String

  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([created_by])
  @@index([created_for])
}
